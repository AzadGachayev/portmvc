@{
    ViewBag.Title = "Home Page";
}
@using MyPortfolio.Models;

<!-- Home start -->

<section id="home" class="module-image js-height-full">

    <div class="intro">
        @{ Section1Div sec1 = ViewBag.section1; }
        <div class="hello">@sec1.Subtitle</div>
        <h1>@sec1.Header</h1>
        <div class="who-creates">@sec1.Title</div>
    </div>

    <div class="mouse-icon">
        <div class="wheel"></div>
    </div>

</section>

<!-- Home end -->
<!-- Portfolio start -->

<section id="portfolio" class="module">
    <div class="container">
        <div class="row">

            <div class="module-header">
                <h2 class="module-title">
                    My works
                    <span>Portfolio</span>
                </h2>
                <div class="module-line"></div>
            </div>

        </div><!-- .row -->
        <!-- Portfolio Filter start-->

        <div class="row">

            <div class="col-sm-12">

                <ul id="filter">
                  
                    @foreach(CategoryWork catItem in ViewBag.workCat)
                    {
                        <li>@catItem.Name</li>
                    }
                </ul>

            </div>

        </div><!-- .row -->
        <!-- Portfolio Filter end -->

    </div><!-- .contaier -->

    <ul class="list-items-container">
        @foreach (MyWorksDiv workItem in ViewBag.workList)
        {


        <li class="list-item" data-groups="all slideshow">
            <figure>
                <img src="@workItem.Photo" alt="p1">
                <figcaption>
                    <a href="~/assets/images/p1-1.jpg" class="simple-ajax-popup"></a>
                    <div class="caption-inner">
                        <h3 class="portfolio-item-title">@workItem.Title</h3>
                        <div class="portfolio-item-desc">Slideshow</div>
                    </div>
                </figcaption>
            </figure>
        </li>
        }

    </ul><!-- .projects-container -->

</section>

<!-- Portfolio end -->
<!-- Services start -->

<section id="services" class="module module-gray">
    <div class="container">

        <div class="module-header wow fadeInUp">
            <h2 class="module-title">
                My Services
                <span>Services</span>
            </h2>
            <div class="module-line"></div>
        </div>

        <div class="row">
            @foreach (ServicesDiv ServicesItem in @ViewBag.service)
            {
                <div class="col-sm-4">
                    <div class="iconbox wow fadeInUp">
                        <div class="iconbox-icon">
                            <i class="fas fa-desktop"></i>
                        </div>
                        <div class="iconbox-text">
                            <h3 class="iconbox-title">@ServicesItem.Header</h3>
                            <div class="iconbox-desc">
                              @ServicesItem.Description
                            </div>
                        </div>
                    </div>
                </div>
            }







        </div><!-- .row -->
    </div><!-- .container -->
</section>

<!-- Services end -->
<!-- About start -->

<section id="about">

    <div class="row position-relative margin-0">

        <div class="col-xs-12 col-md-6 side-image"></div>


        <div class="col-xs-12 col-md-6 col-md-offset-6 side-image-text">

            <div class="row">

                <div class="col-sm-12">

                    <div class="module-header wow fadeInUp">
                        <h2 class="module-title">
                            About me
                            <span>About</span>
                        </h2>
                        <div class="module-line"></div>
                    </div>

                </div>

            </div><!-- .row -->

            <div class="row">
            @foreach (AboutItems Aboutitem in @ViewBag.about )
            {
                     <div class="col-sm-6">

                    <div class="iconboxleft wow fadeInUp">
                        <div class="iconboxleft-icon">
                            <i class="fas fa-camera-retro"></i>
                        </div>
                        <div class="iconboxleft-text">
                            <h3 class="iconboxleft-title">@Aboutitem.Header</h3>
                            <div class="iconboxleft-desc">
                               @Aboutitem.Description </div>
                        </div>
                    </div>

                </div>
            }
           

      

            </div><!-- .row -->


        </div><!-- col-xs-12 -->

    </div><!-- .row -->
</section>

<!-- About end -->
<!-- Testimonial start -->

<div id="testimonial" class="module module-gray text-center">
    <div class="container">

        <div class="module-header wow fadeInUp">
            <h2 class="module-title">
                Testimony
                <span>Testimony</span>
            </h2>
            <div class="module-line"></div>
        </div>

        <div class="row">

            <div class="col-sm-8 col-sm-offset-2">

                <div class="module-header wow fadeInUp">
                    <div class="module-icon"><i class="fas fa-quote-left"></i></div>
                </div>

                <div class="testimonials owl-carousel wow fadeInUp">
                    @foreach (Testimony testItem in ViewBag.testimonial)
                    {
                        <div class="single-testimonials">
                            <p>@testItem.Description</p>
                            <span>@testItem.AuthorName</span>
                        </div>
                    }


                </div>

            </div>

        </div><!-- .row -->
    </div><!-- .container -->
</div>

<!-- Testimonial end -->
<!-- Blog start -->

<section id="blog" class="module blog">
    <div class="container">

        <div class="module-header">
            <h2 class="module-title">
                Blog
                <span>Articles</span>
            </h2>
            <div class="module-line"></div>
        </div>

        <div class="row">

            @foreach (Blogs blogItem in ViewBag.blog)
            {
                <div class="col-sm-4">
                    <a href="passion/2019/01/23/BEAUTY-OF-NATURE.html" class="blogList wow fadeInUp">
                        <div class="blogList-img">

                            <img src="@blogItem.Photo" alt="Blog Desc">


                            <span>Passion</span>

                        </div>
                        <div class="blogList-desc">
                            <h3>@blogItem.Header</h3>
                            <div>@blogItem.Description</div>
                        </div>
                    </a>
                </div>
            }






            <div class="col-sm-12">
                <a class="blog-viewMore" href="blog.html">VIEW MORE</a>
            </div>

        </div><!-- .row -->
    </div><!-- .container -->
</section>

<!-- Blog end -->
<!-- Google Map start-->

<div id="map-section">

    <div id="map"></div>

</div>

<!-- Google Map end -->
<!-- Contact start -->

<section id="contact" class="module">
    <div class="container">

        <div class="module-header">
            <h2 class="module-title">
                Contact
                <span>Contact</span>
            </h2>
            <div class="module-line"></div>
        </div>


        <div class="row">

            <div class="col-sm-6 col-sm-offset-3">

                <form id="contact-form" action="#">
                    <div class="ajax-hidden">
                        <div class="form-group wow fadeInUp">
                            <label class="sr-only" for="c_name">Name</label>
                            <input type="text" id="c_name" class="form-control" name="c_name" placeholder="Name" required>
                        </div>

                        <div class="form-group wow fadeInUp" data-wow-delay=".1s">
                            <label class="sr-only" for="c_email">Email address</label>
                            <input type="email" id="c_email" class="form-control" name="c_email" placeholder="E-mail" required>
                        </div>

                        <div class="form-group wow fadeInUp" data-wow-delay=".2s">
                            <textarea class="form-control" id="c_message" name="c_message" rows="7" placeholder="Your message" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-block btn-custom-2 wow fadeInUp" data-wow-delay=".3s">
                            Send Message
                        </button>
                    </div>
                    <div class="ajax-response"></div>
                </form>

            </div>

        </div><!-- .row -->
    </div><!-- .container -->
</section>

<!-- Contact end -->